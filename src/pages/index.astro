---
import { Image } from "@astrojs/image/components";
import profile from "../assets/profile.jpeg";
import resume from "../assets/resume.png";
import albumCharter from "../assets/album-charter.png";
import sicg from "../assets/sicg.png";
import ttt from "../assets/ttt.png";
import decade from "../assets/decade.png";
import unsong from "../assets/unsong.png";

import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const colorHeading = "uppercase tracking-widest font-bold text-fuchsia-400";
---

<Layout title="Valty's Home">
  <main class="flex flex-col gap-6 p-4 sm:pt-6 md:pt-8">
    <header class="relative flex items-center justify-between">
      <div class="flex flex-col">
        <h1 class="text-4xl font-bold tracking-wide whitespace-nowrap mb-1">
          Dan Wood
        </h1>
        <div class="flex items-center gap-2">
          <span class="text-gray-400 text-xl tracking-wider">@valtism</span>
          <a
            href="https://twitter.com/valtism"
            class="w-4 h-4 text-gray-300 hover:text-white fill-current mt-1"
          >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 248 204">
              <path
                d="M221.95 51.29c.15 2.17.15 4.34.15 6.53 0 66.73-50.8 143.69-143.69 143.69v-.04c-27.44.04-54.31-7.82-77.41-22.64 3.99.48 8 .72 12.02.73 22.74.02 44.83-7.61 62.72-21.66-21.61-.41-40.56-14.5-47.18-35.07a50.338 50.338 0 0 0 22.8-.87C27.8 117.2 10.85 96.5 10.85 72.46v-.64a50.18 50.18 0 0 0 22.92 6.32C11.58 63.31 4.74 33.79 18.14 10.71a143.333 143.333 0 0 0 104.08 52.76 50.532 50.532 0 0 1 14.61-48.25c20.34-19.12 52.33-18.14 71.45 2.19 11.31-2.23 22.15-6.38 32.07-12.26a50.69 50.69 0 0 1-22.2 27.93c10.01-1.18 19.79-3.86 29-7.95a102.594 102.594 0 0 1-25.2 26.16z"
              ></path>
            </svg>
          </a>
          <a
            href="https://github.com/valtism"
            aria-label="Github"
            title="Github"
          >
            <svg
              class="fill-current h-4 w-4 text-gray-300 hover:text-white"
              preserveAspectRatio="xMidYMid"
              viewBox="0 0 256 250"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M128.001 0C57.317 0 0 57.307 0 128.001c0 56.554 36.676 104.535 87.535 121.46 6.397 1.185 8.746-2.777 8.746-6.158 0-3.052-.12-13.135-.174-23.83-35.61 7.742-43.124-15.103-43.124-15.103-5.823-14.795-14.213-18.73-14.213-18.73-11.613-7.944.876-7.78.876-7.78 12.853.902 19.621 13.19 19.621 13.19 11.417 19.568 29.945 13.911 37.249 10.64 1.149-8.272 4.466-13.92 8.127-17.116-28.431-3.236-58.318-14.212-58.318-63.258 0-13.975 5-25.394 13.188-34.358-1.329-3.224-5.71-16.242 1.24-33.874 0 0 10.749-3.44 35.21 13.121 10.21-2.836 21.16-4.258 32.038-4.307 10.878.049 21.837 1.47 32.066 4.307 24.431-16.56 35.165-13.12 35.165-13.12 6.967 17.63 2.584 30.65 1.255 33.873 8.207 8.964 13.173 20.383 13.173 34.358 0 49.163-29.944 59.988-58.447 63.157 4.591 3.972 8.682 11.762 8.682 23.704 0 17.126-.148 30.91-.148 35.126 0 3.407 2.304 7.398 8.792 6.14C219.37 232.5 256 184.537 256 128.002 256 57.307 198.691 0 128.001 0Zm-80.06 182.34c-.282.636-1.283.827-2.194.39-.929-.417-1.45-1.284-1.15-1.922.276-.655 1.279-.838 2.205-.399.93.418 1.46 1.293 1.139 1.931Zm6.296 5.618c-.61.566-1.804.303-2.614-.591-.837-.892-.994-2.086-.375-2.66.63-.566 1.787-.301 2.626.591.838.903 1 2.088.363 2.66Zm4.32 7.188c-.785.545-2.067.034-2.86-1.104-.784-1.138-.784-2.503.017-3.05.795-.547 2.058-.055 2.861 1.075.782 1.157.782 2.522-.019 3.08Zm7.304 8.325c-.701.774-2.196.566-3.29-.49-1.119-1.032-1.43-2.496-.726-3.27.71-.776 2.213-.558 3.315.49 1.11 1.03 1.45 2.505.701 3.27Zm9.442 2.81c-.31 1.003-1.75 1.459-3.199 1.033-1.448-.439-2.395-1.613-2.103-2.626.301-1.01 1.747-1.484 3.207-1.028 1.446.436 2.396 1.602 2.095 2.622Zm10.744 1.193c.036 1.055-1.193 1.93-2.715 1.95-1.53.034-2.769-.82-2.786-1.86 0-1.065 1.202-1.932 2.733-1.958 1.522-.03 2.768.818 2.768 1.868Zm10.555-.405c.182 1.03-.875 2.088-2.387 2.37-1.485.271-2.861-.365-3.05-1.386-.184-1.056.893-2.114 2.376-2.387 1.514-.263 2.868.356 3.061 1.403Z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
      <Image
        src={profile}
        alt="Dan Wood"
        width={200}
        height={200}
        format={"jpeg"}
        class="w-16 sm:w-32 md:w-36 sm:absolute sm:right-2 sm:top-1 rounded-full border-2 border-gray-500 mx-2"
      />
    </header>

    <div>
      <p>I'm a passionate software developer.</p>
      <p>
        Currently working at <a
          href="https://www.brex.com"
          class="underline underline-offset-2 decoration-orange-400"
        >
          Brex
        </a>
      </p>
    </div>

    <h2 class={`mt-2 sm:mt-6 ${colorHeading}`}>Personal Projects</h2>

    <ul class="grid grid-cols-1 gap-4 sm:grid-cols-2 sm:gap-6 md:gap-8">
      <Card
        href="https://resume.valtism.com"
        githubUrl="https://github.com/valtism/resume"
        image={resume}
        title="Terminal Résumé"
        body="An implemendation of my resume in my terminal setup"
      />
      <Card
        href="https://albumcharter.com"
        githubUrl="https://github.com/valtism/music-list"
        image={albumCharter}
        title="Album Charter"
        body="Create your own top album charts with drag-and-drop and high quality exports"
      />
      <Card
        href="https://sicg.valtism.com"
        githubUrl="https://github.com/valtism/climb-tags"
        image={sicg}
        title="Climb Tags"
        body="Creator for climbing routes markers for Sydney Indoor Climbing Gym"
      />
      <Card
        href="https://tictactoe.valtism.com"
        githubUrl="https://github.com/valtism/ultimate-tic-tac-toe"
        image={ttt}
        title="Ultimate Tic Tac Toe"
        body="Game implementation of Ultimate Tic Tac Toe"
      />
      <Card
        href="https://best-of-decade.netlify.app"
        githubUrl="https://github.com/valtism/best-of-decade"
        image={decade}
        title="Best albums of the 2010s"
        body="Site I made with my favourite albums of the 2010s"
      />
      <Card
        href="https://unsong.valtism.com"
        githubUrl="https://github.com/valtism/unsong-contentlayer"
        image={unsong}
        title="Unsong"
        body="An implementation of Unsong by Scott Alexander in a nicely formatted webpage"
      />
    </ul>
  </main>
</Layout>
